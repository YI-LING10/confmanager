<div class="container" style="margin-top: 3%;">
    <div class="row">
        <div class="col">
            <label style="font-size: 20px; display: flex; align-items: center; color:#5F9EA0;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                    class="bi bi-bell-fill" viewBox="0 0 16 16">
                    <path
                        d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zm.995-14.901a1 1 0 1 0-1.99 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901z" />
                </svg>
                &nbsp;會議室列表
            </label>
        </div>
    </div>
</div>

<div class="w3-container">
    <div>
        <div style="margin: 0 5%;">
            <table class="table conf-table">
                <thead>
                    <tr>
                        <th scope="col">會議室名稱</th>
                        <th scope="col" class="text-center">地址</th>
                        <th scope="col" class="text-center">負責人員工編號</th>
                        <th scope="col" class="text-center">容納人數</th>
                        <th scope="col" class="text-center">價格</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- 遍歷會議室陣列 --}}
                    {{#each roomsData}}
                    <tr onclick="listTableClick('{{this.roomData._id}}')">
                        <td>{{this.roomData.name}}</td>
                        <td class="text-center">{{this.roomData.location}}</td>
                        <td class="text-center">{{this.roomData.managerId}}</td>
                        <td class="text-center">{{this.roomData.accommodate}}</td>
                        <td class="text-center">{{this.roomData.price}}</td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
        </div>
    </div>
</div>