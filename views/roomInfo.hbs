<div class="container" style="margin-top: 3%;">
    <div class="row">
        <div class="col">
            <label style="font-size: 20px; display: flex; align-items: center; color:#5F9EA0;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                    class="bi bi-bell-fill" viewBox="0 0 16 16">
                    <path
                        d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zm.995-14.901a1 1 0 1 0-1.99 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901z" />
                </svg>
                &nbsp;會議室列表
            </label>
        </div>
    </div>
</div>

<div class="w3-container">
    <div>
        <div style="margin: 0 5%; text-align: center">
            <table class="table conf-table">
                <thead>
                    <tr>
                        <th scope="col">會議名稱</th>
                        <th scope="col" class="text-center">開始時間</th>
                        <th scope="col" class="text-center">結束時間</th>
                        <th scope="col" class="text-center">主持人審核</th>
                        <th scope="col" class="text-center">場地審核</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- 遍歷陣列 --}}
                    {{#each confsData}}
                    <tr>
                        <td>{{this.confData.name}}</td>
                        <td class="text-center">{{this.confData.startTime}}</td>
                        <td class="text-center">{{this.confData.endTime}}</td>
                        <td class="text-center">{{{getSign this.confData.isChairSign}}}</td>
                        <td class="text-center">{{{getSign this.confData.isRoomSign}}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            
            </table>
            {{!-- 判斷有無會議 --}}
            {{#if confsData}}
            {{else}}
            {{!-- 沒有會議 --}}
            尚無會議
            {{/if}}
        </div>
    </div>
</div>