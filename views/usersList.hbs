<div class="container" style="margin-top: 3%;">
    <div class="row">
        <div class="col">
            <label style="font-size: 20px; display: flex; align-items: center; color:#5F9EA0;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                    class="bi bi-bell-fill" viewBox="0 0 16 16">
                    <path
                        d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zm.995-14.901a1 1 0 1 0-1.99 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901z" />
                </svg>
                &nbsp;員工列表
            </label>
        </div>
    </div>
</div>

<div class="w3-container">
    <div>
        <div style="margin: 0 5%;">
            <table class="table conf-table">
                <thead>
                    <tr>
                        <th scope="col">員工編號</th>
                        <th scope="col" class="text-center">姓名</th>
                        <th scope="col" class="text-center">職位</th>
                        <th scope="col" class="text-center">信箱</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- 遍歷員工陣列 --}}
                    {{#each usersData}}
                    <tr>
                        <td>{{this.userData.staffId}}</td>
                        <td class="text-center">{{this.userData.name}}</td>
                        <td class="text-center">{{this.userData.position}}</td>
                        <td class="text-center">{{this.userData.email}}</td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
        </div>
    </div>
</div>