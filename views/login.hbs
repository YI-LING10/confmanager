<div style=" text-align: center; font:25px 微軟正黑體; font-weight:bold;">
    <div style="">
        <div style="display: flex;justify-content:center; padding:2% 15%">
            <div class="information" style="width:40%;margin:1% 3%">
                <div style="padding: 3%">
                    <h1 style="margin:5% 0 0 0">Login</h1>
                    
                </div>
                {{!-- 顯示 flash 訊息 --}}
                {{> message }}
                <div>
                    {{!-- 登入資料輸入後端，判別會員資格 --}}
                    <form method="POST" action="/users/login">
                        <div class="form-inline" style="padding: 2%">&nbsp;&nbsp;&nbsp;
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M5.52 19c.64-2.2 1.84-3 3.22-3h6.52c1.38 0 2.58.8 3.22 3"/><circle cx="12" cy="10" r="3"/><circle cx="12" cy="12" r="10"/>
                            </svg>
                            <label>帳號</label>&nbsp;&nbsp;&nbsp;
                            <input class="form-control" type="text" id="account" name="staffId" size="30" required>
                        </div>
                        <div class="form-inline" style="margin:1% 0;padding: 2%">&nbsp;&nbsp;&nbsp;
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                            <label>密碼</label>&nbsp;&nbsp;&nbsp;
                            <input class="form-control" type="password" id="password" name="password" size="30" required>
                        </div>
                        <div style="padding: 5% 2%">
                            <input class="form-control btn btn-primary" type="submit" value="登入">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>